{
  "name": "ft-header",
  "displayName": "ft_header",
  "description": "Generate 42-style file headers using your name, email, with customizable header width for long names. Great for Piscine and Core projects.",
  "version": "1.2.5",
  "icon": "42.png",
  "publisher": "2mdtln",
  "repository": {
    "type": "git",
    "url": "https://github.com/2mdtln/ft-header-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/2mdtln/ft-header-vscode/issues"
  },
  "homepage": "https://github.com/2mdtln/ft-header-vscode",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "keywords": [
    "42",
    "header",
    "piscine",
    "template",
    "intra",
    "norm"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "42-header.insertHeader",
        "title": "Insert 42 Header"
      },
      {
        "command": "42-header.toggleAutoInsert",
        "title": "Toggle 42 Auto Header"
      }
    ],
    "keybindings": [
      {
        "command": "42-header.insertHeader",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h",
        "win": "ctrl+alt+h",
        "linux": "ctrl+alt+h"
      }
    ],
    "configuration": {
      "title": "42 Header",
      "properties": {
        "42-header.username": {
          "type": "string",
          "description": "Student username printed throughout the 42 header.",
          "default": ""
        },
        "42-header.email": {
          "type": "string",
          "description": "Student email address for the header.",
          "default": ""
        },
        "42-header.headerWidth": {
          "type": "number",
          "description": "Total width of the generated header (including /* */).",
          "default": 80,
          "minimum": 70,
          "maximum": 160
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.70.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
